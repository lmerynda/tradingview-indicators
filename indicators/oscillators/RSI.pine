//@version=5
indicator("Relative Strength Index (RSI)", shorttitle="RSI", overlay=false)

// Inputs
length = input.int(14, minval=1, title="RSI Length")
src = input.source(close, title="Source")
overbought = input.int(70, minval=50, maxval=100, title="Overbought Level")
oversold = input.int(30, minval=0, maxval=50, title="Oversold Level")

// RSI Calculation
rsi = ta.rsi(src, length)

// Plot
plot(rsi, title="RSI", color=color.blue, linewidth=2)
hline(overbought, title="Overbought", color=color.red, linestyle=hline.style_dashed)
hline(oversold, title="Oversold", color=color.green, linestyle=hline.style_dashed)
hline(50, title="Middle Line", color=color.gray, linestyle=hline.style_dotted)

// Color the background when overbought or oversold
bgcolor(rsi > overbought ? color.new(color.red, 90) : na, title="Overbought Background")
bgcolor(rsi < oversold ? color.new(color.green, 90) : na, title="Oversold Background")

// Alert conditions
alertcondition(ta.cross(rsi, overbought), title="RSI Crosses Above Overbought", message="RSI crossed above overbought level")
alertcondition(ta.cross(oversold, rsi), title="RSI Crosses Below Oversold", message="RSI crossed below oversold level")
