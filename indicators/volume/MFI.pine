//@version=5
indicator("Money Flow Index (MFI)", shorttitle="MFI", overlay=false)

// Inputs
length = input.int(14, minval=1, title="MFI Length")
overbought = input.int(80, minval=50, maxval=100, title="Overbought Level")
oversold = input.int(20, minval=0, maxval=50, title="Oversold Level")

// MFI Calculation
mfi = ta.mfi(hlc3, length)

// Plot
plot(mfi, title="MFI", color=color.blue, linewidth=2)
hline(overbought, title="Overbought", color=color.red, linestyle=hline.style_dashed)
hline(oversold, title="Oversold", color=color.green, linestyle=hline.style_dashed)
hline(50, title="Middle Line", color=color.gray, linestyle=hline.style_dotted)

// Color the background when overbought or oversold
bgcolor(mfi > overbought ? color.new(color.red, 90) : na, title="Overbought Background")
bgcolor(mfi < oversold ? color.new(color.green, 90) : na, title="Oversold Background")

// Alert conditions
alertcondition(ta.cross(mfi, overbought), title="MFI Crosses Overbought", message="MFI crossed above overbought level")
alertcondition(ta.cross(oversold, mfi), title="MFI Crosses Oversold", message="MFI crossed below oversold level")
